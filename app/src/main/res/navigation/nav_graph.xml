<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentCharacters">

    <fragment
        android:id="@+id/fragmentCharacters"
        android:name="com.ennoblesoft.rickandmorty.ui.characters.CharactersFragment"
        android:label="Characters"
        tools:layout="@layout/fragment_characters">

        <action
            android:id="@+id/action_charactersFragment_to_characterFragment"
            app:destination="@id/fragmentCharacter" />

    </fragment>

    <fragment
        android:id="@+id/fragmentCharacter"
        android:name="com.ennoblesoft.rickandmorty.ui.characterdetails.CharacterFragment"
        android:label="Character Details"
        tools:layout="@layout/fragment_character">

        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>

</navigation>